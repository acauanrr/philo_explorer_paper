# Frontend Environment Variables

# API URLs
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_PY_API_URL=http://localhost:8000

# Application Settings
NEXT_PUBLIC_APP_NAME=Phylo Explorer
NEXT_PUBLIC_APP_VERSION=2.0.0

# Feature Flags
NEXT_PUBLIC_ENABLE_WEBGL=true
NEXT_PUBLIC_ENABLE_3D_VIS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Performance Settings
NEXT_PUBLIC_MAX_NODES=1000
NEXT_PUBLIC_ANIMATION_DURATION=500

# WebSocket (if needed in future)
NEXT_PUBLIC_WS_URL=ws://localhost:3001
